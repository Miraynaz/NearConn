@{Layout = "_Layout";}
@model EtkinlikModel
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Etkinlik Güncelle</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" method="post" asp-action="EtkinlikGuncelle" asp-controller="Etkinlik">
                    <div class="row">
                        <div class="form-group">
                            <input type="hidden" value="@Model.EtkinlikId" asp-for="EtkinlikId" />
                            <div class="col-md-3 ml-lg  control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="EtkinlikAdi" id="inputDefault" value="@Model.EtkinlikAdi">
                                </div>
                            </div>

                            <div class="col-md-3 ml-lg  control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="EtkinlikResim" id="inputDefault" value="@Model.EtkinlikResim">
                                </div>
                            </div>

                            <div class="col-md-3 control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                    <input type="text" data-plugin-datepicker class="form-control" asp-for="EtkinlikTarih" value="@Model.EtkinlikTarih">
                                </div>
                            </div>

                        </div>
                    </div>



                    <div class="form-group">

                        <div class="col-md-10 ml-xs control-label">
                            <textarea class="form-control" rows="2" id="textareaAutosize" asp-for="EtkinlikAdres" data-plugin-textarea-autosize>@Model.EtkinlikAdres</textarea>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10 ml-xs control-label">
                            <textarea class="form-control" rows="2" id="textareaAutosize" asp-for="EtkinlikAciklama" data-plugin-textarea-autosize>@Model.EtkinlikAciklama</textarea>
                        </div>
                    </div>

                    <div class="col-md-5 mr-lg text-right">
                        <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Etkinlik Güncelle</button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>