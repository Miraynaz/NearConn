@{Layout = "_Layout";}
@model KullaniciModel
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Kullanıcı Kayıt</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" method="post" asp-action="KullaniciKayit" asp-controller="Kullanici">
                    <div class="row">
                        <span asp-validation-summary="All" class="text-danger"></span>
                        <div class="form-group">

                            <div class="col-md-5 ml-lg  control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input type="text" required="" class="form-control" id="inputDefault" asp-for="KullaniciAdSoyad" placeholder="Ad Soyad">
                                </div>
                                <span asp-validation-summary="KullaniciAdSoyad" class="text-danger"></span>
                            </div>


                            <div class="col-md-5 mr-lg control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input type="text" required="" class="form-control" asp-for="KullaniciAdi" id="inputDefault" placeholder="Kullanıcı Adı">
                                </div>
                                <span asp-validation-summary="KullaniciAdi" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">

                            <div class="col-md-5 ml-lg control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                    </span>
                                    <input id="phone" data-plugin-masked-input data-input-mask="(999) 999-9999" asp-for="KullaniciTelefon" placeholder="Telefon" class="form-control">
                                </div>
                                <span asp-validation-summary="KullaniciTelefon" class="text-danger"></span>
                            </div>


                            <div class="col-md-5 mr-lg control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    <input type="email" required="" asp-for="KullaniciEmail" class="form-control" id="inputDefault" placeholder="Email">
                                </div>
                                <span asp-validation-summary="KullaniciEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">

                            <div class="col-md-5 ml-lg control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-key"></i>
                                    </span>
                                    <input type="password" required="" asp-for="KullaniciSifre" class="form-control" id="inputDefault" placeholder="Şifre">
                                </div>
                                <span asp-validation-summary="KullaniciSifre" class="text-danger"></span>
                            </div>
                            <div class="col-md-5 control-label">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-key"></i>
                                    </span>
                                    <input type="password" required="" asp-for="KullaniciSifreTekrar" class="form-control" id="inputDefault" placeholder="Şifre Tekrar">
                                </div>
                                <span asp-validation-summary="KullaniciSifreTekrar" class="text-danger"></span>
                            </div>


                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10 control-label">
                            <textarea class="form-control" required="" rows="2" id="textareaAutosize" asp-for="KullaniciAdres" placeholder="Adres" data-plugin-textarea-autosize></textarea>
                        </div>
                        <span asp-validation-summary="KullaniciAdres" class="text-danger"></span>
                    </div>

                    <div class="col-md-5 mr-lg text-right">
                        <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Kaydol</button>
                    </div>


                </form>
            </div>
	    </section>
    </div>
</div>